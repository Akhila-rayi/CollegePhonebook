<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewdetailsActivity">


        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">


            <TextView

                    android:id="@+id/detailstitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.050000012"
                    android:layout_marginLeft="8dp" android:layout_marginRight="8dp"/>

            <TextView

                    android:id="@+id/nmtitle_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailstitle" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"/>


            <EditText

                    android:id="@+id/et_nm_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/nmtitle_profl"
                    app:layout_constraintStart_toStartOf="@+id/nmtitle_profl"
                    app:layout_constraintEnd_toEndOf="@+id/nmtitle_profl"/>

            <TextView

                    android:id="@+id/mobiletitle_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="MobileNumber"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_nm_profl" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"/>

            <EditText

                    android:id="@+id/et_mobile_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/mobiletitle_profl"
                    app:layout_constraintStart_toStartOf="@+id/nmtitle_profl" app:layout_constraintEnd_toEndOf="@+id/nmtitle_profl"/>



            <TextView

                    android:id="@+id/emailtitle_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_mobile_profl" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"/>

            <EditText

                    android:id="@+id/et_email_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/emailtitle_profl"
                    app:layout_constraintStart_toStartOf="@+id/nmtitle_profl"
                    app:layout_constraintEnd_toEndOf="@+id/nmtitle_profl"/>

            <TextView

                    android:id="@+id/addresstitle_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_email_profl" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"/>

            <EditText

                    android:id="@+id/et_address_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/addresstitle_profl"
                    app:layout_constraintStart_toStartOf="@+id/nmtitle_profl"
                    app:layout_constraintEnd_toEndOf="@+id/nmtitle_profl"/>


            <TextView

                    android:id="@+id/gendertitle_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_address_profl" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"/>

            <RadioGroup

                    android:id="@+id/radiogrp_profl"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/gendertitle_profl" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0">

                <RadioButton
                        android:text="Male"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent" tools:layout_editor_absoluteY="546dp"
                        tools:layout_editor_absoluteX="154dp" android:id="@+id/radioButton1_profl"/>
                <RadioButton
                        android:text="Female"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent" tools:layout_editor_absoluteY="546dp"
                        tools:layout_editor_absoluteX="154dp" android:id="@+id/radioButton2_profl"/>


            </RadioGroup>

            <TextView

                    android:id="@+id/dobtitle_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date of birth"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radiogrp_profl" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"/>

            <EditText

                    android:id="@+id/et_dob_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/dobtitle_profl"
                    app:layout_constraintStart_toStartOf="@+id/nmtitle_profl"
                    app:layout_constraintEnd_toEndOf="@+id/nmtitle_profl"/>


            <TextView

                    android:id="@+id/typetitle_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_dob_profl" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="40dp"    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/typetitle_profl"
                    app:layout_constraintStart_toStartOf="@+id/nmtitle_profl"
                    app:layout_constraintEnd_toEndOf="@+id/nmtitle_profl" android:id="@+id/sp_type_profl"/>

            <TextView

                    android:id="@+id/qlfctntitle_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Qualification"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sp_type_profl" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"/>


            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="40dp"    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/qlfctntitle_profl"
                    app:layout_constraintStart_toStartOf="@+id/nmtitle_profl"
                    app:layout_constraintEnd_toEndOf="@+id/nmtitle_profl" android:id="@+id/sp_qlfctn_profl"/>



            <TextView

                    android:id="@+id/branchtitle_profl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Branch"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sp_qlfctn_profl" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"/>

            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="40dp"    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/branchtitle_profl"
                    app:layout_constraintStart_toStartOf="@+id/nmtitle_profl"
                    app:layout_constraintEnd_toEndOf="@+id/nmtitle_profl" android:id="@+id/sp_branch_profl"/>


            <Button
                    android:text="Update profile"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="#fad154"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:id="@+id/btn_registr_profl" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/sp_branch_profl" android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/btn_back_profl"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <Button
                    android:text="Back"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="#fad154"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:id="@+id/btn_back_profl" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/sp_branch_profl" android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_registr_profl"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                    app:layout_constraintVertical_bias="0.0"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
